extends ../layout/index   

block contenido
    .py-10 
        h1.text-ceneter.text-4xl.my-10.font-extrabold.text-cerulean.text-center Bienes 
             span.font-normal.text-black.text-center Raices 
        h2.text.center.font-extrabold.text-2xl=page 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    div(class="error-container")
                        p(class="error bg-red-500 text-black uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
                            div(class="progress-bar-container")
                                div(class="progress-bar")

        script.
            document.addEventListener('DOMContentLoaded', function() {
            const errorMessages = document.querySelectorAll('.error-container');
            errorMessages.forEach(errorMessage => {
                errorMessage.addEventListener('animationend', function() {
                errorMessage.remove(); 
                });
            });
            });

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow.shadow-lg 
                form.space-y-5.px-6(method="POST"   noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-2.font-bold(for="new_Password") Ingresa tu nueva contraseña
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Minimo 8 caracteres" type="password" name="new_password")
                        
                        label.block.text-sm.uppercase.text-gray-1000.mb-2.font-bold(for="Confirm_new_Password") Ingresa tu nueva contraseña
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Minimo 8 caracteres" type="password" name="Confirm_new_password")
                   
                    .flex.items-center.justify-between 
                        a.text-gray-700.text-xs(href="/usuario/createaccount" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿No tienes cuenta?,crear una 
                        a.text-gray-700.text-xs(href="/usuario/login" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Ya tienes cuenta? Inica sesion 
                        
                    input(class="w-full bg-mint hover:bg-orange text-white font-bold py-3 cursor-pointer tect-center" type="submit" value="Actualizar contraseña")


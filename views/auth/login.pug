extends ../layout/index   

block contenido
    .py-10 
        h1.text-ceneter.text-4xl.my-10.font-extrabold.text-cerulean.text-center Bienes 
             span.font-normal.text-black.text-center.text-cerulean-600 Raices 
        h2.text.center.font-extrabold.text-2xl=page 
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow.shadow-lg 
                form(action="").space-y-5.px-6
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-2.font-bold Correo electronico 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder(placeholder="Tu email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-2.font-bold Contraseña
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded.xl.placeholder(placeholder="password" type="password" name="password")
                     
                    .flex.items-center.justify-between 
                        a.text-gray-700.text-xs(href="/usuario/createaccount" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Aun no tienes cuenta?, registrate 
                        a.text-gray-700.text-xs(href="/usuario/passwordRecovery" class="hover:underline hover:decoration-2 hover:decoration-red-600") olvide mi contraseña
                    
                    input(class="w-full bg-mint hover:bg-orange text-white font-bold py-3 cursor-pointer tect-center" type="submit" value="Ingresar")

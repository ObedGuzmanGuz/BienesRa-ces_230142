extends ../layout/index   

block contenido
    .py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-cerulean Bienvenido
        h1.text-4xl.my-10.font-extrabold.text-center.text-cerulean Bienes
            span.font-normal.text-black Raices
        h2.text-center.text-2xl.font-extrabold=page
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    div(class="error-container")
                        p(class="error bg-red-500 text-black uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
                            div(class="progress-bar-container")
                                div(class="progress-bar")



        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4-shadow.shadow-lg
                form.space-y-5.px-6(method="POST" action="/usuario/createAccount"  noValidate)
                    input(type="hidden" name="_csrf" value=csrfToke)
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-3.font-bold Nombre Completo 
                        input#nombre.w-full.px-3.py-2.border.border-gray-600.rounded-xl.placeholder-gray-400(placeholder= "Ingresa Tu nombre con apellidos" type="text" name="nombre" value= usuario ? usuario.nombre :'')
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-3.font-bold Correo electronico
                        input#email.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder= "ej: usuario@gmail.com" type="email" name="email" value= usuario ? usuario.email :'' )
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-3.font-bold Password
                        input#password.w-full.px-3.py-2.border.border-gray-600.rounded-xl.placeholder-gray-400(placeholder= "minimo de 8 caracteres" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-1000.mb-3.font-bold Confirmacion de contraseña
                        input#password-confirm.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder= "minimo de 8 caracteres" type="password" name="pass2_usuario")
                    .flex.items-center.justify-between 
                        a.text-gray-700.text-xs(href="/usuario/login" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Ya tienes cuenta? Inicia Sesion 
                        a.text-gray-700.text-xs(href="/usuario/passwordRecovery " class="hover:underline decoration-2 hover:decoration-red-600") Olvide mi contraseña...
                    input(class="w-full bg-mint hover:bg-orange text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")

                        